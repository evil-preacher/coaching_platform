<!DOCTYPE html>
<html>
  <head>
    <title>CoachingPlatform</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="">
    <header class="d-flex justify-content-between align-items-center px-5">
        <%= link_to 'Logo', root_path %>
        <div>
          <% if current_coach %>
            <span>
              <i class="fas fa-lg fa-user-clock"></i>Welcome, <%= current_coach.email %>
              <%= link_to 'Logout', destroy_coach_session_path, method: :delete%>
            </span>
          <% else %>
            <i class="fas fa-lg fa-user-lock"></i>
            <%= link_to 'Sign up', new_coach_registration_path %>
            <%= link_to 'Login', new_coach_session_path %>
          <% end %>
        </div>
    </header>
    <% if notice %>
      <p class="notice mb-0 flash-block"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert mb-0 flash-block"><%= alert %></p>
    <% end %>
    <div class="container mt-5">
      <%= yield %>
    </div>
  <script src="https://kit.fontawesome.com/9b266351af.js" crossorigin="anonymous"></script>
  </body>
</html>
